@model OiWeb.Entity.Page

<div class="content-wrapper">
    @RenderPage("~/Views/Shared/Breadcrumb.cshtml")        
    <section class="content container-fluid">
        <div class="row">             
            <div class="col-md-12">
                <div class="chart-box">
                    <h4>Editar Página</h4>
                    <div class="row">
                        <form method="POST" enctype="multipart/form-data" action="/Paginas/Editar">
                            <div class="col-md-6">
                                <div class="form-group has-feedback">
                                    <label class="control-label">Nome</label>
                                    <input type="text" class="form-control" name="name" placeholder="Nome" value="@Html.Raw(Model.name)">
                                    <span class="fa fa-briefcase form-control-feedback" aria-hidden="true"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group has-feedback">
                                    <label class="control-label">Descrição</label>
                                    <input type="text" class="form-control" name="description" placeholder="Descrição" value="@Html.Raw(Model.description)">
                                    <span class="fa form-control-feedback" aria-hidden="true"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group has-feedback">
                                    <label class="control-label">isCommon</label>
                                    <select class="form-control" name="isCommon">
                                        <option value=true @Html.Raw(Model.isCommon == true ? "selected" : "")>Sim</option>
                                        <option value=false @Html.Raw(Model.isCommon == false ? "selected" : "")>Não</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group has-feedback">
                                    <label class="control-label">Status</label>
                                    <select class="form-control" name="isActive">
                                        <option value=true @Html.Raw(Model.isActive == true ? "selected" : "")>Ativo</option>
                                        <option value=false @Html.Raw(Model.isActive == false ? "selected" : "")>Desativado</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group has-feedback">
                                    <label class="control-label">Criado em</label>
                                    <input type="text" class="form-control" name="description" disabled value="@Html.Raw(Model.dtCreate)">
                                    <span class="fa form-control-feedback" aria-hidden="true"></span>
                                </div>
                            </div>
                            <input type="hidden" name="idPage" value=@Model.idPage />
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-default">Salvar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>   
</div>