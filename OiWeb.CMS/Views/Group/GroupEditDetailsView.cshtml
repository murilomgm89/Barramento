@model OiWeb.Entity.PriceGroup

<div class="content-wrapper">
    @RenderPage("~/Views/Shared/Breadcrumb.cshtml")        
    <section class="content container-fluid">
        <div class="row">             
            <div class="col-md-12">
                <div class="chart-box">
                    <h4>Novo Grupo de preços</h4>
                    <div class="row">
                        <form method="POST" enctype="multipart/form-data" action="/Grupos/UpdateGroup">
                            <div class="col-md-6">
                                <div class="form-group has-feedback">
                                    <label class="control-label">Nome</label>
                                    <input type="text" class="form-control" name="name" placeholder="Nome" required value="@Html.Raw(Model.name)">
                                    <span class="fa fa-briefcase form-control-feedback" aria-hidden="true"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group has-feedback">
                                    <label class="control-label">Descrição</label>
                                    <input type="text" class="form-control" name="description" placeholder="Descrição" required value="@Html.Raw(Model.description)">
                                    <span class="fa form-control-feedback" aria-hidden="true"></span>
                                </div>
                            </div>
                            <input type="hidden" name="idPriceGroup" value="@Html.Raw(Model.idPriceGroup) />
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-default">Salvar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>   
</div>