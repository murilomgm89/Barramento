@model IEnumerable<OiWeb.Entity.PlanRegulation>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    @RenderPage("~/Views/Shared/Breadcrumb.cshtml")

    <section class="content container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="chart-box">
                    <h4>
                        Lista de Regulamentos
                        <a href="/regulamentos/criar" class="btn btn-success btn-rounded">Novo Regulamento</a>
                    </h4>
                    <hr />
                    @RenderPage("~/Views/Shared/Practical/DataTablePartialRegulationsView.cshtml", Model)
                </div>
            </div>
        </div>
    </section>
</div>
<script src="/Content/plugins/tables/dataTables.min.js"></script>
<script type="text/javascript">
    window.onload = function () {
         $('table').DataTable({
            "info": false,
            "pagingType": "simple"
         });

         $(".dataTables_paginate span").hide();
    };
</script>

