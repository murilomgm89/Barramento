@model OiWeb.Entity.PlanRegulation

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form method="POST" enctype="multipart/form-data" action="/regulamentos/salvar">
    <div class="content-wrapper">
        <section class="content container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="chart-box">
                        <h4>Novo regulamento</h4>
                        <hr />
                        <div class="row">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-md-6">
                                <div class="form-group has-feedback">
                                    @Html.LabelFor(model => model.name, "Nome", htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group has-feedback">
                                    <label class="control-label">Grupo de Preço</label>
                                    @Html.DropDownList("idPriceGroup", new SelectList(ViewBag.Groups, "idPriceGroup", "name"), new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group has-feedback">
                                    <label class="control-label" for="type">Tipo</label>

                                    <select class="form-control" name="type">
                                        <option value="summary">Sumário </option>
                                        <option value="regulation">Regulamento </option>
                                        <option value="others">Outros</option>
                                    </select>

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group has-feedback">
                                    @Html.LabelFor(model => model.link, "Link", htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.EditorFor(model => model.link, new { htmlAttributes = new { @class = "form-control"} })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group has-feedback">
                                    <label for="file">Regulamento</label>
                                    <input type="file" id="file" name="file">

                                </div>
                            </div>
                            <div class="col-md-12">
                                <input type="submit" value="Cadastrar" class="btn btn-default" />
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>
    </div>
</form>
