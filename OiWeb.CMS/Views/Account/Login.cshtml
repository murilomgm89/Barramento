@model OiWeb.CMS.Models.LoginViewModel
@{ 
    Layout = null;
}
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>CMS - Portal Oi</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="../Content/bootstrap/css/bootstrap.min.css">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" rel="stylesheet">

    <!-- Template style -->
    <link rel="stylesheet" href="../Content/dist/css/style.css">
    <link rel="stylesheet" href="../Content/dist/et-line-font/et-line-font.css">
    <link rel="stylesheet" href="../Content/dist/font-awesome/css/font-awesome.min.css">
    <link type="text/css" rel="stylesheet" href="../Content/dist/weather/weather-icons.min.css">
    <link type="text/css" rel="stylesheet" href="../Content/dist/weather/weather-icons-wind.min.css">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
</head>

<body class="body-bg-color">
    <div class="wrapper">
        <div class="form-body">           
        @using (Html.BeginForm("LoginIsValid", "Account", FormMethod.Post, new { @class = "col-form", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="col-logo"><a href="http://oi.com.br"><img alt="" src="~/Content/dist/img/logo-oimae.png"></a></div>
            <header>v.12.2017</header>
            <fieldset>
                <section>
                    <div class="form-group has-feedback @Html.Raw(ViewBag.Error)">
                        <label class="control-label">E-mail</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "E-mail" })
                        <span class="fa fa-envelope form-control-feedback" aria-hidden="true"></span>
                    </div>
                </section>
                <section>
                    <div class="form-group has-feedback">
                        <label class="control-label">Password</label>                       
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                        <span class="fa fa-lock form-control-feedback" aria-hidden="true"></span>
                    </div>
                </section>
                <section>
                    <div class="row">                        
                        <div class="col-md-6 text-right">
                            @*<label class="checkbox">
                                <input name="remember" checked="" type="checkbox">
                                <i></i>Keep me logged in
                            </label>*@
                        </div>
                    </div>
                </section>
            </fieldset>
            <footer class="text-right">
                <button type="submit" class="btn btn-info pull-right">Login</button>               
            </footer>
            <input type="hidden" name="returnUrl" value="@Html.Raw(Request.QueryString["returnUrl"])" />
        }
        </div>
    </div>
    <!-- wrapper -->
    <!-- jQuery -->
    <script src="../Content/dist/js/jquery.min.js"></script>
    <script src="../Content/bootstrap/js/bootstrap.min.js"></script>
    <script src="../Content/dist/js/ovio.js"></script>
</body>
</html>
